<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ToDo</title>
    <script src="https://kit.fontawesome.com/f50f474cf2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./stylesheets/style.css">

</head>
<body>
<div class="container">
    <h2>To-Do List</h2>
    <form method="post">
        <input type="text" name="title" required>
        <button type="submit">Create List</button>
    </form>
    <ul class="item-container">
            <div class="item">
                <% todoLists.forEach(details => { %>
                    <li>
                        <a href="/list/<%= details.title %>"><%= details.title %></a>
                        <div class="controls">
                            <a href="/list/edit/<%= details._id %>" class="edit">
                                <span class="fas fa-edit"></span>
                            </a>
                            <a href="/list/remove/<%= details._id %>" class="remove" onclick="return confirm('Are you sure you want to delete this list?');">
                                <span class="fas fa-times"></span>
                            </a>
                        </div>

                    </li>
                <% }) %>
            </div>
    </ul>
</div>
</body>
</html>